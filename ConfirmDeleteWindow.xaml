<Window x:Class="POEPART3.ConfirmDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Are you sure you want to delete this recipe?" TextWrapping="Wrap" Margin="10">
            <TextBlock.Background>
                <ImageBrush ImageSource="/84059815-food-seasoning-background-blue-coloured-rustic-wooden-background-lemon-slices-herbs-pepper-sea-salt.jpg"/>
            </TextBlock.Background>
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Yes" Width="75" Margin="10" Click="YesButton_Click" FontWeight="Bold" FontFamily="Segoe Print"/>
            <Button Content="No" Width="75" Margin="10" Click="NoButton_Click" FontWeight="Bold" FontFamily="Segoe Print"/>
        </StackPanel>
    </Grid>
</Window>
